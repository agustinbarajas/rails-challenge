<section class="flex flex-col gap-2 w-full">
  <h1 class="font-bold text-3xl">Tasks</h1>
  <%= link_to 'Create task', new_to_do_path, class: "btn-primary w-fit" %>

  <% @to_dos.each do |to_do| %>
    <div class="flex gap-2 justify-between w-full border py-2 px-3">
      <h2 class="text-lg font-medium"><%= to_do.title %></h2>

      <%= link_to "See task", to_do, class: "btn-link" %>
    </div>
  <%end%>
</section>
